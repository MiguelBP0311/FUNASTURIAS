<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textViewInfoNombreFiesta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre de la Fiesta"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/textViewInfoMunicipio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Municipio de la Fiesta: EJ: Oviedo" />

    <TextView
        android:id="@+id/textViewInfoFechaFiesta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fechas en las que se desarrolla la fiesta " />

    <TextView
        android:id="@+id/textViewInfoDescripcionFiesta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripción de la Fiesta. Información " />
</LinearLayout>