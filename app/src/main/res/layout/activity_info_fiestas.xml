<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="20px">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/textViewInfoNombreFiesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="16sp"
        android:text="Nombre de la Fiesta"
        android:textStyle="bold"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/textViewInfoMunicipio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Municipio de la Fiesta: EJ: Oviedo"
         />
</LinearLayout>
    <TextView
        android:id="@+id/textViewInfoFechaFiesta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"

        android:text="Fechas en las que se desarrolla la fiesta "
        android:padding="10dp">

    </TextView>


    <TextView
        android:id="@+id/textViewInfoDescripcionFiesta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripción de la Fiesta. Información " />

</LinearLayout>